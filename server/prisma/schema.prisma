generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Restaurant {
  id          String   @id @default(uuid())
  name        String
  address     String?
  city        String?
  state       String?
  zipCode     String?
  phone       String?
  email       String?
  timezone    String   @default("America/New_York")
  openingHour Int      @default(10)
  closingHour Int      @default(22)
  seatingCapacity Int  @default(100)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  menuItems       MenuItem[]
  orders          Order[]
  customers       Customer[]
  staff           Staff[]
  shifts          Shift[]
  inventoryItems  InventoryItem[]
  wasteLogs       WasteLog[]
  reviews         Review[]
  demandForecasts DemandForecast[]

  @@map("restaurants")
}

model MenuItem {
  id           String   @id @default(uuid())
  restaurantId String
  name         String
  description  String?
  category     String
  price        Decimal  @db.Decimal(10, 2)
  cost         Decimal  @db.Decimal(10, 2)
  preparationTime Int   @default(15) // minutes
  isActive     Boolean  @default(true)
  imageUrl     String?
  allergens    String[] @default([])
  isVegetarian Boolean  @default(false)
  isVegan      Boolean  @default(false)
  isGlutenFree Boolean  @default(false)
  spiceLevel   Int      @default(0) // 0-5
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  restaurant    Restaurant     @relation(fields: [restaurantId], references: [id])
  orderItems    OrderItem[]
  wasteLogs     WasteLog[]
  itemForecasts ItemForecast[]

  @@index([restaurantId])
  @@index([category])
  @@map("menu_items")
}

model Order {
  id           String      @id @default(uuid())
  restaurantId String
  customerId   String?
  staffId      String?
  orderNumber  String
  orderType    OrderType   @default(DINE_IN)
  status       OrderStatus @default(PENDING)
  subtotal     Decimal     @db.Decimal(10, 2)
  tax          Decimal     @db.Decimal(10, 2)
  tip          Decimal     @db.Decimal(10, 2) @default(0)
  discount     Decimal     @db.Decimal(10, 2) @default(0)
  total        Decimal     @db.Decimal(10, 2)
  tableNumber  Int?
  guestCount   Int         @default(1)
  notes        String?
  paymentMethod String?
  paidAt       DateTime?
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  completedAt  DateTime?

  restaurant Restaurant  @relation(fields: [restaurantId], references: [id])
  customer   Customer?   @relation(fields: [customerId], references: [id])
  staff      Staff?      @relation(fields: [staffId], references: [id])
  items      OrderItem[]
  review     Review?

  @@index([restaurantId])
  @@index([customerId])
  @@index([createdAt])
  @@index([status])
  @@map("orders")
}

enum OrderType {
  DINE_IN
  TAKEOUT
  DELIVERY
  CATERING
}

enum OrderStatus {
  PENDING
  CONFIRMED
  PREPARING
  READY
  SERVED
  COMPLETED
  CANCELLED
}

model OrderItem {
  id         String   @id @default(uuid())
  orderId    String
  menuItemId String
  quantity   Int      @default(1)
  unitPrice  Decimal  @db.Decimal(10, 2)
  modifiers  Json?    // Special requests, modifications
  notes      String?
  createdAt  DateTime @default(now())

  order    Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  menuItem MenuItem @relation(fields: [menuItemId], references: [id])

  @@index([orderId])
  @@index([menuItemId])
  @@map("order_items")
}

model Customer {
  id            String    @id @default(uuid())
  restaurantId  String
  email         String?
  phone         String?
  firstName     String?
  lastName      String?
  dateOfBirth   DateTime?
  loyaltyPoints Int       @default(0)
  totalSpent    Decimal   @db.Decimal(12, 2) @default(0)
  visitCount    Int       @default(0)
  lastVisitAt   DateTime?
  segment       CustomerSegment @default(NEW)
  preferences   Json?     // Dietary preferences, favorite items
  notes         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  restaurant Restaurant @relation(fields: [restaurantId], references: [id])
  orders     Order[]
  reviews    Review[]

  @@unique([restaurantId, email])
  @@unique([restaurantId, phone])
  @@index([restaurantId])
  @@index([segment])
  @@map("customers")
}

enum CustomerSegment {
  NEW
  REGULAR
  VIP
  CHAMPION
  AT_RISK
  LOST
}

model Staff {
  id           String    @id @default(uuid())
  restaurantId String
  email        String    @unique
  password     String
  firstName    String
  lastName     String
  role         StaffRole @default(SERVER)
  hourlyRate   Decimal   @db.Decimal(10, 2)
  hireDate     DateTime  @default(now())
  phone        String?
  isActive     Boolean   @default(true)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  restaurant Restaurant  @relation(fields: [restaurantId], references: [id])
  shifts     Shift[]
  orders     Order[]
  wasteLogs  WasteLog[]

  @@index([restaurantId])
  @@map("staff")
}

enum StaffRole {
  OWNER
  MANAGER
  HOST
  SERVER
  BARTENDER
  KITCHEN
  BUSSER
}

model Shift {
  id           String   @id @default(uuid())
  restaurantId String
  staffId      String
  scheduledStart DateTime
  scheduledEnd   DateTime
  actualStart    DateTime?
  actualEnd      DateTime?
  breakMinutes   Int      @default(0)
  tips           Decimal  @db.Decimal(10, 2) @default(0)
  notes          String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  restaurant Restaurant @relation(fields: [restaurantId], references: [id])
  staff      Staff      @relation(fields: [staffId], references: [id])

  @@index([restaurantId])
  @@index([staffId])
  @@index([scheduledStart])
  @@map("shifts")
}

model InventoryItem {
  id              String   @id @default(uuid())
  restaurantId    String
  name            String
  category        String
  unit            String   // kg, lbs, liters, count
  currentQuantity Decimal  @db.Decimal(10, 3)
  reorderPoint    Decimal  @db.Decimal(10, 3)
  parLevel        Decimal  @db.Decimal(10, 3)
  unitCost        Decimal  @db.Decimal(10, 2)
  vendor          String?
  lastOrderedAt   DateTime?
  expirationDays  Int?
  storageLocation String?
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  restaurant Restaurant @relation(fields: [restaurantId], references: [id])
  wasteLogs  WasteLog[]

  @@index([restaurantId])
  @@index([category])
  @@map("inventory_items")
}

model WasteLog {
  id              String   @id @default(uuid())
  restaurantId    String
  inventoryItemId String?
  menuItemId      String?
  quantity        Decimal  @db.Decimal(10, 3)
  unit            String
  reason          WasteReason
  cost            Decimal  @db.Decimal(10, 2)
  loggedBy        String?
  notes           String?
  loggedAt        DateTime @default(now())

  restaurant    Restaurant     @relation(fields: [restaurantId], references: [id])
  inventoryItem InventoryItem? @relation(fields: [inventoryItemId], references: [id])
  menuItem      MenuItem?      @relation(fields: [menuItemId], references: [id])
  loggedByStaff Staff?         @relation(fields: [loggedBy], references: [id])

  @@index([restaurantId])
  @@index([loggedAt])
  @@index([reason])
  @@map("waste_logs")
}

enum WasteReason {
  spoilage
  overproduction
  accident
  expired
  other
}

model Review {
  id           String   @id @default(uuid())
  restaurantId String
  orderId      String   @unique
  customerId   String?
  overallRating Int     // 1-5
  foodRating    Int?    // 1-5
  serviceRating Int?    // 1-5
  ambianceRating Int?   // 1-5
  valueRating   Int?    // 1-5
  comment       String?
  sentiment     String? // positive, neutral, negative
  sentimentScore Decimal? @db.Decimal(5, 4) // -1 to 1
  isPublic      Boolean @default(true)
  staffResponse String?
  respondedAt   DateTime?
  createdAt     DateTime @default(now())

  restaurant Restaurant @relation(fields: [restaurantId], references: [id])
  order      Order      @relation(fields: [orderId], references: [id])
  customer   Customer?  @relation(fields: [customerId], references: [id])

  @@index([restaurantId])
  @@index([overallRating])
  @@index([createdAt])
  @@map("reviews")
}

model DemandForecast {
  id           String   @id @default(uuid())
  restaurantId String
  forecastDate DateTime @db.Date
  dayOfWeek    Int      // 0-6
  expectedCovers Int
  expectedRevenue Decimal @db.Decimal(12, 2)
  confidenceLow   Int
  confidenceHigh  Int
  weatherFactor   Decimal? @db.Decimal(3, 2)
  eventFactor     Decimal? @db.Decimal(3, 2)
  notes           String?
  createdAt       DateTime @default(now())

  restaurant   Restaurant     @relation(fields: [restaurantId], references: [id])
  itemForecasts ItemForecast[]

  @@unique([restaurantId, forecastDate])
  @@index([restaurantId])
  @@index([forecastDate])
  @@map("demand_forecasts")
}

model ItemForecast {
  id               String   @id @default(uuid())
  demandForecastId String
  menuItemId       String
  expectedQuantity Int
  confidenceLow    Int
  confidenceHigh   Int
  createdAt        DateTime @default(now())

  demandForecast DemandForecast @relation(fields: [demandForecastId], references: [id], onDelete: Cascade)
  menuItem       MenuItem       @relation(fields: [menuItemId], references: [id])

  @@index([demandForecastId])
  @@index([menuItemId])
  @@map("item_forecasts")
}
